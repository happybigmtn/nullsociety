{
  "name": "@nullspace/design-tokens",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./colors": {
      "types": "./dist/colors.d.ts",
      "react-native": "./dist/colors.js",
      "import": "./dist/colors.js",
      "require": "./dist/colors.js"
    },
    "./typography": {
      "types": "./dist/typography.d.ts",
      "react-native": "./dist/typography.js",
      "import": "./dist/typography.js",
      "require": "./dist/typography.js"
    },
    "./spacing": {
      "types": "./dist/spacing.d.ts",
      "react-native": "./dist/spacing.js",
      "import": "./dist/spacing.js",
      "require": "./dist/spacing.js"
    },
    "./animations": {
      "types": "./dist/animations.d.ts",
      "react-native": "./dist/animations.js",
      "import": "./dist/animations.js",
      "require": "./dist/animations.js"
    },
    "./shadows": {
      "types": "./dist/shadows.d.ts",
      "react-native": "./dist/shadows.js",
      "import": "./dist/shadows.js",
      "require": "./dist/shadows.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@nullspace/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
