{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig.build.json"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.build.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**",
        "test/**",
        "tests/**",
        "**/__tests__/**",
        "vitest.config.*",
        "jest.config.*",
        "package.json"
      ]
    },
    "lint": {
      "inputs": ["src/**", "*.config.js", "*.config.ts"]
    },
    "clean": {
      "cache": false
    }
  }
}
